<!DOCTYPE html>
<html lang="en">
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1,IE=8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="~/images/favicon/favicon-32x32.png" sizes="32x32" />

    <link href="~/admintema/css/materialize.css" rel="stylesheet" />
    <link href="~/admintema/css/jquery.datatables.min.css" rel="stylesheet" />
</head>
<body>
    <div id="slide-out" class="sidenav">
        <ul class="collapsible expandable">
            <li class ="active">
                <a class="collapsible-header">İlanlarım <span class="arrow"></span></a>
                <ul class="collapsible-body">
                    <li>
                        <ul>
                            <li><a href="~/admin/ListCar">Araç Listesi</a></li>
                            <li><a href="~/admin/AddToCar">Araç Ekle</a></li>
                        </ul>
                    </li>
                </ul>
            </li>
            <li>
                <a class="collapsible-header">Markalar <span class="arrow"></span></a>
                <ul class="collapsible-body">
                    <li>
                        <ul>
                            <li><a href="~/admin/ListCarBrand">Araç Markaları</a></li>
                            <li><a href="~/admin/AddBrand">Araç Markası Ekle</a></li>
                        </ul>
                    </li>
                </ul>
            </li>
            <li>
                <a class="collapsible-header">Modeller <span class="arrow"></span></a>
                <ul class="collapsible-body">
                    <li>
                        <ul>
                            <li><a href="~/admin/ListCarModel">Araç Modelleri</a></li>
                            <li><a href="~/admin/AddToCarModel">Araç Modeli Ekle</a></li>
                        </ul>
                    </li>
                </ul>
            </li>
            <li>
                <a class="collapsible-header">Donanımlar <span class="arrow"></span></a>
                <ul class="collapsible-body">
                    <li>
                        <ul>
                            <li><a href="~/admin/ListCarEquipment">Araç Donanımları</a></li>
                            <li><a href="~/admin/AddToCarEquipment">Araç Donanımı Ekle</a></li>
                        </ul>
                    </li>
                </ul>
            </li>
            <li>
                <a class="collapsible-header">Kategoriler <span class="arrow"></span></a>
                <ul class="collapsible-body">
                    <li>
                        <ul>
                            <li><a href="~/admin/listcategories">Tüm Kategoriler</a></li>
                            <li><a href="~/admin/addcategory">Kategori Ekle</a></li>
                        </ul>
                    </li>
                </ul>
            </li>
            
        </ul>

    </div>
    <a href="#" data-target="slide-out" class="sidenav-trigger">menu</a>
    <div class="adminright">
        @RenderBody()
    </div>

    <script src="~/admintema/js/jquery-3.6.3.min.js"></script>
    <script src="~/admintema/js/materialize.min.js"></script>
    <script src="~/admintema/js/jquery.datatables.min.js"></script>
    <script src="~/admintema/js/datatables.rowreorder.min.js"></script>
    <script src="~/admintema/js/datatables.bootstrap4.min.js"></script>
    <script src="~/admintema/js/jquery-ui.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.sidenav').sidenav();
            $('.collapsible').collapsible();

            var elem = document.querySelector('.collapsible.expandable');
            var instance = M.Collapsible.init(elem, {
                accordion: false
            });
        });


    </script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>